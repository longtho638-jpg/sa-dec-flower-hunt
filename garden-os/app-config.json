            },
            {
                "path": "/inventory",
                "label": "Kho hoa",
                "icon": "zi-camera",
                "activeIcon": "zi-camera-solid"
            },
            {
                "path": "/orders",
                "label": "Đơn hàng",
                "icon": "zi-list",
                "activeIcon": "zi-list-solid"
            },
            {
                "path": "/profile",
                "label": "Cá nhân",
                "icon": "zi-user",
                "activeIcon": "zi-user-solid"
            }
        ]
    },
    "permissions": [
        "scope.userLocation",
        "scope.camera",
        "scope.getUserInfo"
    ],
    "css": {
        "preflight": true
    }
}