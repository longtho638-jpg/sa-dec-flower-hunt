{
    "app": {
        "title": "AGRIOS Farmer",
        "headerTitle": "Quản Lý Vườn",
        "headerColor": "#15803d",
        "textColor": "white",
        "statusBarColor": "#166534",
        "hideAndroidBottomNavigationBar": true,
        "actionBarHidden": false
    },
    "pages": [
        {
            "path": "/",
            "name": "home"
        },
        {
            "path": "/inventory",
            "name": "inventory"
        },
        {
            "path": "/orders",
            "name": "orders"
        },
        {
            "path": "/profile",
            "name": "profile"
        }
    ],
    "bottomNavigation": {
        "items": [
            {
                "path": "/",
                "label": "Tổng quan",
                "icon": "zi-home",
